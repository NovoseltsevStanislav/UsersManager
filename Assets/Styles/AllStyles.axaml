<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
 
        <!-- Общие стили -->
        <Style Selector="Window">
                <Setter Property="Background" Value="#0C7CCD"></Setter>
        </Style>
        
        <Style Selector="TextBox:focus /template/ Border">
                <Setter Property="BorderBrush" Value="#004197"></Setter>
        </Style>
        
        <Style Selector="TextBox">
                <Setter Property="FontFamily" Value="{DynamicResource Montserrat}"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        
        <!-- Верхняя часть окна слева -->

        <Style Selector="Button.topside">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="Height" Value="35"></Setter>
                <Setter Property="Width" Value="110"></Setter>
                <Setter Property="Margin" Value="4, 0,0,0"></Setter>
                <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
                <Setter Property="FontSize" Value="17"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style Selector="Grid.topside">
                <Setter Property="Background" Value="#0C7CCD"></Setter>
        </Style>
        <Style Selector="Label.topsidefont">
                <Setter Property="FontFamily" Value="{DynamicResource Montserrat}"></Setter>
                <Setter Property="FontWeight" Value="SemiBold"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style Selector="TextBox.topside">
                <Setter Property="Height" Value="35"></Setter>
                <Setter Property="Width" Value="300"></Setter>
                <Setter Property="FontSize" Value="17"></Setter>
                
        </Style>
        
        <!-- Шапка таблицы и таблица -->
        <Style Selector="Border.list">
                <Setter Property="Background" Value="#D0D2D6"></Setter>
        </Style>
        <Style Selector="TextBlock.tablefont">
                <Setter Property="FontFamily" Value="{DynamicResource Montserrat}"></Setter>
                <Setter Property="FontWeight" Value="SemiBold"></Setter>
                <Setter Property="FontSize" Value="14"></Setter>
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="Width" Value="100"></Setter>
                <Setter Property="LineSpacing" Value="2"></Setter>
        </Style>
        
        <!-- Правая сторона окна -->
        <!-- Список полей и выпадающий список -->
        <Style Selector="TextBox">
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="Margin" Value="4"></Setter>
        </Style>
        <Style Selector="TextBox.notes">
                <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Top"></Setter>
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
                <Setter Property="AcceptsReturn" Value="True"></Setter>
        </Style>
        <Style Selector="ComboBox.accesslevel">
                <Setter Property="FontFamily" Value="{DynamicResource Montserrat}"></Setter>
                <Setter Property="FontWeight" Value="Black"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="Width" Value="200"></Setter>
        </Style>
        <!-- Кнопки справа -->
        <Style Selector="Button.right">
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style Selector="Label.right">
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="FontFamily" Value="{DynamicResource Montserrat}"></Setter>
                <Setter Property="FontWeight" Value="SemiBold"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style Selector="Label.righticon">
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
                <Setter Property="FontSize" Value="35"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>

</Styles>
